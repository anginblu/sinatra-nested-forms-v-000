<h1>Display your Pirate here</h1>
  <div class="pirate">
    <h3>Name: <%=@pirate.name %></h3>
    <h4>Weight: <%=@pirate.weight %></h4>
    <h5>Heigh: <%= @pirate.height %></h5>

  </div>

<h2>Display your first ship here</h2>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= @ships[0].name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
  </div><br>
<% end %>

